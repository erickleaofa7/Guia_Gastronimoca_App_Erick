<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Paises">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="-33dp"
        tools:layout_editor_absoluteY="-317dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <EditText
                android:id="@+id/edtUsuario"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="usuario conectado"
                android:inputType="textPersonName"
                android:text="" />

            <Button
                android:id="@+id/button2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="sesion"
                android:background="@drawable/boton_color_border"
                android:text="LOGOUT" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="@string/ecuador"
                android:background="@drawable/bordes_textview"
                android:textAlignment="center" />

            <ImageButton
                android:id="@+id/btnEcuador"
                android:layout_width="match_parent"
                android:layout_height="275dp"
                android:scaleType="fitEnd"
                app:srcCompat="@drawable/ecuador" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bordes_textview"
                android:text="@string/peru"
                android:textAlignment="center" />

            <ImageButton
                android:id="@+id/btnPeru"
                android:layout_width="match_parent"
                android:layout_height="248dp"
                android:scaleType="fitEnd"
                app:srcCompat="@drawable/peru" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bordes_textview"
                android:text="@string/colombia"
                android:textAlignment="center" />

            <ImageButton
                android:id="@+id/btnColombia"
                android:layout_width="match_parent"
                android:layout_height="225dp"
                android:scaleType="fitEnd"
                app:srcCompat="@drawable/colombia" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/chile"
                android:background="@drawable/bordes_textview"
                android:textAlignment="center" />

            <ImageButton
                android:id="@+id/btnChile"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:scaleType="fitEnd"
                app:srcCompat="@drawable/chile" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/venezuela"
                android:background="@drawable/bordes_textview"
                android:textAlignment="center" />

            <ImageButton
                android:id="@+id/btnVenezuela"
                android:layout_width="match_parent"
                android:layout_height="237dp"
                android:scaleType="fitEnd"
                app:srcCompat="@drawable/venezuela" />


        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>